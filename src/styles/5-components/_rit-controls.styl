.ritControls
  position fixed
  top 40%
  left -100px
  z-index 100
  border none
  color #009688
  transition left .4s linear

  &:hover
    left 0

  &__inner
    display flex
    height 60px

  &__controls
    display flex
    flex-wrap wrap
    align-content stretch
    width 100px
    height 100%
    background currentColor

  &__icon
    width 30px
    height 100%
    background currentColor
    border-radius 0 30px 30px 0

  &__add
    position relative
    border none
    background none

    &:before
    &:after
      content ''
      position absolute
      top 0
      right 0
      bottom 0
      left 0
      z-index 1
      margin auto
      background #fff
      border-radius 3px

    &:before
      width 25px
      height 5px

    &:after
      width 5px
      height 25px

  &__start
  &__end
  &__add
  &__remove
    cursor pointer

  &__start
  &__end
    width 50%

  &__add
  &__remove
    width 100%
