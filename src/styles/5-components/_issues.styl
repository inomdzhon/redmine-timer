.issue
  margin-bottom 15px
  padding 10px
  font-size 1em
  line-height 1
  background #fff
  box-shadow: 0 1px 5px 1px rgba(0, 1, 2, .39);

  &__name
    margin-bottom 5px
    font-size 1.4em
    font-weight 600

  &__descr
    margin-bottom 10px

  &__row
    margin-bottom 5px
    display flex
    justify-content space-between

  &__item
    margin-bottom 5px

.issue-controls
  display flex
  &__item
    margin-right 10px
    &:last-child
      margin-right 0